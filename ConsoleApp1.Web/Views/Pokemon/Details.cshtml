@model IDictionary<string, object?>
@{
    ViewData["Title"] = "Pokemon Details";
}
<h1>Pokemon 詳細 (Id: @Model["Id"])</h1>
<table class="table">
    <tbody>
        <tr><th>Name</th><td>@(Model["Name"] ?? "(null)")</td></tr>
        <tr><th>Type1</th><td>@(Model["Type1"] ?? "")</td></tr>
        <tr><th>Type2</th><td>@(Model["Type2"] ?? "")</td></tr>
        <tr><th>HP</th><td>@(Model["Hp"] ?? "")</td></tr>
        <tr><th>Attack</th><td>@(Model["Attack"] ?? "")</td></tr>
        <tr><th>Defense</th><td>@(Model["Defense"] ?? "")</td></tr>
        <tr><th>SpAtk</th><td>@(Model["SpAtk"] ?? "")</td></tr>
        <tr><th>SpDef</th><td>@(Model["SpDef"] ?? "")</td></tr>
        <tr><th>Speed</th><td>@(Model["Speed"] ?? "")</td></tr>
        <tr><th>Height</th><td>@(Model["Height"] ?? "")</td></tr>
        <tr><th>Weight</th><td>@(Model["Weight"] ?? "")</td></tr>
        <tr><th>Abilities</th><td>@(Model["Abilities"] ?? "")</td></tr>
    </tbody>
</table>

@if (Model.ContainsKey("Moves") && Model["Moves"] != null)
{
    <h3>招式</h3>
    <div class="mb-3">@Model["Moves"]</div>
}

<div class="d-flex">
    <a class="btn btn-primary me-2" asp-action="Upsert" asp-route-id="@(Model["Id"])">編輯</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@(Model["Id"])">刪除</a>
</div>
